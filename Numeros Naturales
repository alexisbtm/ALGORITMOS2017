int contardig(int n)

{

int c = 0;

while (n>0)

{

n = n / 10;

c++;

}

return(c);

}

int concatenar(int n, int f)

{

if (n<f)

return(n*powf(10, contardig(f)) + f);

else

return(d*powf(10, contardig(f)) + f);

}

int frecuencia(int n, int d)

{

int e, c = 0;

while (n > 0)

{

e = n % 10;

if (e == d)

{

c++;

}

n = n / 10;

}

return (c);

}

int eliminarrepetidos(int n)

{

int k, aux, s, l = 0, i = 0;

aux = n;

while (n > 0)

{

k = n % 10;

s = frecuencia(aux, k);

if (s == 1)

{

l = l + k*pow(10, i);

i++;

}

n = n / 10;

}

return(l);

}

int invertir(int n)

{

int d, a = 0;

while (n>0)

{

d = n % 10;

a = (a * 10) + d;

n = n / 10;

}

return(a);

}

int digito_mayor(int n)

{

int d, may;

d = n % 10;

may = d;

while (n>0)

{

if (d<((n / 10) % 10))

{

may = ((n / 10) % 10);

d = may;

}

n = n / 10;

}

return(may);

}

int eliminar_mayor(int n)

{

int d, newnro = 0, m;

m = n;

while (n>0){

d = n % 10;

if (digito_mayor(m) != d)

newnro = (newnro * 10) + d;

n = n / 10;

}

return(invertir(newnro));

}

int ordenado(int n, int dig)

{

int d, newnro = 0;

while (n > 0)

{

d = n % 10;

if (dig < d)

newnro = (newnro * 10) + d;

else

{

newnro = (newnro * 10) + dig;

dig = d;

}

n = n / 10;

}

newnro = newnro * 10 + dig;

return(invertir(newnro));

}

bool verificar_capicua(int n)

{

bool k = false;

if (n == invertir(n))

{

k = true;

}

return(k);

}

