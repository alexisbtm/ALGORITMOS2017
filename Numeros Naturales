}

int crapula(int n)

{

int d, d1, s = 0, s1 = 0;

while (n > 0)

{

d = n % 10;

s = s + d;

n = n / 10;

}

if (s > 10)

{

while (s>0)

{

d1 = s % 10;

s1 = s1 + d1;

s = s / 10;

}

return(s1);

}

return(s);

}

