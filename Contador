#include "iostream"

#include "conio.h"

#include "stdlib.h"

using namespace std;

int contador_digitos(int n)

{

int c=0;

while(n>0)

{

n=n/10;

c++;

}

return(c);

}

int sumar_digitos(int n)

{

int d,s=0;

while(n>0);

{

d=n%10;

s=s+d;

n=n/10;

}

return(s);

}

int invertir_numero(int n)

{

int d,s=0;

{

while(n>0)

{

d=n%10;

s=s*10+d;

n=n/10;

}

}

return(s);

}

bool verif_digito(int n1, int n2 )

{

int d;

bool k=false;

while(n1>0)

{

d=n1%10;

if(d==n2)

{

k=true;

}

n1=n1/10;

}

return (k);

}

int eliminar_digitos_repetidos(int n)

{

int d,s=0,aux=n;

while (n>0)

{

d=n%10;

if(verif_digito(aux,d)==false)

{

s=s*10+d;

}

n=n/10;

}

return(invertir_numero(s));

}

int digito_mayor(int n)

{

int d,may;

may=d%10;

while (n>0)

{

d=n%10;

n=n/10;

if(d>may)

{

may=d;

}

}

return(may);

}

int eliminar_digitos(int n)

{

int d,s=0,aux=n;

while(n>0)

{

d=n%10;

if(digito_mayor(aux)!=d)

{

s=s*10+d;

}

n=n/10;

}

return(invertir_numero(s));

}

int introducir_digito(int n, int dig)

{

int x,y,s=0;

n=n*10+dig;

while(n>0)

{

x=digito_mayor(n);

y=eliminar_digitos(n);

n=y;

s=s*10+x;

}

return(invertir_numero(s));

}

bool numero_capicua(int n)

{

bool k=false;

if(n==invertir_numero(n))

{

k=true;

}

return(k);

}

void adivinar_numero(int n)

{

int nro;

system("cls");

do{

cout << " Que numero cree usted que debe ser?: ";

cin >> nro;

if(nro>n)

{

cout << " El numero es demasiado grande: ";

cout << endl;

}

else

{

if(nro<n)

{

cout << " El numero es demasiado pequeÃ±o: ";

cout << endl;

}

else

{

cout << " ADIVINASTE EL NUMERO FELICIDADES!!! ";

cout << endl;

}

}

}while(nro!=n);

}

