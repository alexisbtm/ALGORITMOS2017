void mostrar_paralelas(string nombre[],int nota[], int n)
{
	cout <<"No.\t Nombre y Apellido \t Nota"<<endl;
	cout <<"============================================="<<endl;
	for (int i =0; i<n;i)
	    cout<<i+1<<" "<<nombre[i]<<"\t"<<nota[i]<<endl;
}
