				      cout <<"Ingrese el numero de elementos: ";
					  cin >> n;
					} while ((n>TAM)||(n<0));
					cargar_vector(A,n);
					break;
			case 2:
				    do {
				      cout <<"Ingrese el numero de elementos: ";
					  cin >> n;
					} while ((n>TAM)||(n<0));
					cargar_vectors(nombre,n);
					break;
			case 3: 
