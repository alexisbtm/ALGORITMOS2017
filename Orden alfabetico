//------------------------------------------------------------------------EJEMPLO DE VECTORES
void cargar_vector(int A[],int n)
{
	for (int i =0; i<=n;i)
	{
		cout<<"A["<<i1<<"] = ";
		cin>>A[i];
	}
}

void cargar_vectors(string nombre[],int n)
{
	for (int i =0; i<=n;i)
	{
		cout<<"nombre["<<i<<"] = ";
		getline(cin, nombre[i]);
	}
}

void mostrar_vector(int A[],int n)
{
	for (int i =0; i<=n;i)
	{
		cout<<"A["<<i1<<"] = "<<A[i]<<endl;
	}
}


void arrays_paralelas(string nombre[],int nota[], int n)
{
	int aux;
	string auxs;
	for (int i =0; i < n-1; i++)
		for (int j =i+1; j<n;j++)
		    if (nombre[i] > nombre[j])
				{
					aux = nota[j];
				    nota[j] = nota[i];
					nota[i] = aux;
					auxs = nombre[j];
				    nombre[j] = nombre[i];
					nombre[i] = aux;

				}
}
/*
